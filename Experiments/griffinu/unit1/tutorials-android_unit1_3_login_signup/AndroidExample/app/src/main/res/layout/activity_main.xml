<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E909E"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_msg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:text="Home Page"
        android:textAllCaps="true"
        android:textColor="#000403"
        android:textSize="50dp"
        android:textStyle="bold"
        android:typeface="monospace"></TextView>

    <TextView
        android:id="@+id/main_username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:text="{{username}}"
        android:textColor="#000000"
        android:textSize="30dp"></TextView>


    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20sp"></Button>

    <Button
        android:id="@+id/main_signup_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Signup"
        android:textColor="#ffffff"
        android:textSize="20sp"></Button>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="dark mode switch"
        android:scaleX="2"
        android:scaleY="2"
        android:text="Dark"
        android:translationX="150dp"
        android:translationY="20dp" />


</androidx.appcompat.widget.LinearLayoutCompat>