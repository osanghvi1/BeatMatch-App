<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#1C1C1C"
    >

    <TextView
        android:id="@+id/textView_add_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:text="Create New Event"
        android:textColor="#FFFFFF"
        android:textSize="20pt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_event_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="8dp"
        android:layout_margin="20dp"
        android:hint="Event Name"
        android:gravity="center"
        android:background="@drawable/custom_white_text_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_add_event" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_event_host"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/custom_white_text_field"
        android:hint="Event Host"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/editText_event_name"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_event_location"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/custom_white_text_field"
        android:hint="Event Location"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/editText_event_host"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_event_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/custom_white_text_field"
        android:hint="Event Date"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/editText_event_location"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_event_cost"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/custom_white_text_field"
        android:hint="Event Cost"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/editText_event_date"
        tools:layout_editor_absoluteX="20dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_event_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/custom_white_text_field"
        android:gravity="center"
        android:hint="Event Image (1 - 6)"
        app:layout_constraintTop_toBottomOf="@+id/editText_event_cost"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/button_event_create"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="135dp"
        android:text="Create Event"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_signup_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_event_image" />

    <Button
        android:id="@+id/button_event_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="29dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>